@model GestionPlanning.Models.Permissions

@{
    ViewBag.Title = "Créer une permission";
}

<h2>Créer une permission</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Annee)
        
        <div class="form-group">
            @Html.LabelFor(model => model.Date)
                <input type="date" id="Date" name="Date" value="@($"{Model.Date:yyyy-MM-dd}")" class="form-control" />
                @Html.ValidationMessageFor(model => model.Date, "", new {@class = "text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TypePerm)
                @Html.EnumDropDownListFor(model => model.TypePerm,null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TypePerm, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Page précédente", "Index", Model.Date.Year)
</div>
