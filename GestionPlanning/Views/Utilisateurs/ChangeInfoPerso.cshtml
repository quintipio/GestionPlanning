@model GestionPlanning.Models.Utilisateurs

@{
    ViewBag.Title = "Modifier mes données";
}

<h2>Modifier mes données</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <script>
        $(document).ready(function() {
            $('#saveButton').click(function() {
                $(this).prop("disabled", true);
                if (!$('form').valid()) {
                    $(this).prop("disabled", false);
                    return false;
                }
                $('form').submit();
            });
        });
    </script>



    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.MotDePasse)
        @Html.HiddenFor(model => model.Nom)
        @Html.HiddenFor(model => model.Prenom)
        @Html.HiddenFor(model => model.Email)
        @Html.HiddenFor(model => model.GradesId)
        @Html.HiddenFor(model => model.PolesId)
        @Html.HiddenFor(model => model.Role)
        @Html.HiddenFor(model => model.Etat)
        @Html.HiddenFor(model => model.Nid)
        
        <div class="form-group">
            @Html.LabelFor(model => model.Pnia)
                @Html.TextBoxFor(model => model.Pnia, new { @class = "form-control", style="width:80px;" } )
                @Html.ValidationMessageFor(model => model.Pnia, "", new {@class = "text-danger"})
        </div>


        <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-default" id="saveButton"/>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Modifier mon mot de passe", "ChangePasswordPerso")
    <br/><br/>
    @Html.ActionLink("Retour à l'acceuil", "Index", "Planning")
</div>
