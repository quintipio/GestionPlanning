@model GestionPlanning.Models.Grades

@{
    ViewBag.Title = "Créer un grade";
}

<h2>Créer un grade</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Etat)
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nom)
                @Html.TextBoxFor(model => model.Nom, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Diminutif)
                @Html.TextBoxFor(model => model.Diminutif,  new { @class = "form-control",style="width:100px;" })
                @Html.ValidationMessageFor(model => model.Diminutif, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Arme d'appartenance :")
                @Html.DropDownList("ArmesId", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ArmesId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Page précedente", "Index")
</div>
