@model GestionPlanning.Models.Mails

@{
    ViewBag.Title = "Modifier un mail";
}

<h2>Modifier un mail</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.NomUnique)

        <div class="form-group">
            @Html.LabelFor(model => model.Objet)
                @Html.TextBoxFor(model => model.Objet,new { @class="form-control", style="width=200px;"})
                @Html.ValidationMessageFor(model => model.Objet, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Corps)
                @Html.TextAreaFor(model => model.Corps, new { @class = "form-control", style = "width:500px; height:200px;"})
                @Html.ValidationMessageFor(model => model.Corps, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Page précédente", "Index")
</div>
