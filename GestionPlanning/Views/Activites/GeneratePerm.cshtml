@model GestionPlanning.ViewModel.GenerateursPermsViewModel
@{
    ViewBag.Title = "Génerer une feuille de permission";
}

<h2>Génerer une feuille de permission</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdActivite)


        <div class="form-group">
            @Html.LabelFor(model => model.Telephone)
                @Html.TextBoxFor(model => model.Telephone, new { @class = "form-control"  })
                @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Adresse)
                @Html.TextBoxFor(model => model.Adresse, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Adresse, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CodePostal)
                @Html.TextBoxFor(model => model.CodePostal, new { @class = "form-control", style = "width:80px;" })
                @Html.ValidationMessageFor(model => model.CodePostal, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ville)
                @Html.TextBoxFor(model => model.Ville, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.Ville, "", new {@class = "text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NbJoursTotal)
                @Html.TextBoxFor(model => model.NbJoursTotal, new { @class = "form-control", style = "width:50px;" })
                @Html.ValidationMessageFor(model => model.NbJoursTotal, "", new {@class = "text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NbJoursDemande)
                @Html.TextBoxFor(model => model.NbJoursDemande, new { @class = "form-control", style = "width:50px;" })
                @Html.ValidationMessageFor(model => model.NbJoursDemande, "", new { @class = "text-danger" })
        </div>
        <br/>
        <div class="form-group">
            Attention, cet outil est une aide à la saisie, il peut être nécéssaire de rajouter ou modifier des informations soit même après le téléchargement<br/>
            <input type="submit" value="Générer" class="btn btn-default"/>
            @Html.ValidationMessage("erreurAucunFichier", "", new {@class = "text-danger"})
        </div>
    </div>
}

<div>
    @Html.ActionLink("Page précédente", "Index")
</div>
