@model GestionPlanning.Models.Armes

@{
    ViewBag.Title = "Modifier une arme";
}

<h2>Modifier une arme</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Etat)
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Nom)
                @Html.TextBoxFor(model => model.Nom, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsRtt)
                @Html.CheckBoxFor(model => model.IsRtt)
                @Html.ValidationMessageFor(model => model.IsRtt, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsPcp)
                    @Html.CheckBoxFor(model => model.IsPcp)
                    @Html.ValidationMessageFor(model => model.IsPcp, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
                <input type="submit" value="Modifier" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Page précédente", "Index")
</div>
